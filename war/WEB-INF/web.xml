<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>loginService</servlet-name>
    <servlet-class>com.yossale.server.actions.LoginServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>loginService</servlet-name>
    <url-pattern>/obudget2/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>expenseService</servlet-name>
    <servlet-class>com.yossale.server.actions.SectionServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>expenseService</servlet-name>
    <url-pattern>/obudget2/expense</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>bucketService</servlet-name>
    <servlet-class>com.yossale.server.actions.BucketServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>bucketService</servlet-name>
    <url-pattern>/obudget2/bucket</url-pattern>
  </servlet-mapping>


  <!--  Cron servlets -->
  <servlet>
    <servlet-name>updateDBServlet</servlet-name>
    <servlet-class>com.yossale.server.cron.UpdateDBFromYedaServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>updateDBServlet</servlet-name>
    <url-pattern>/cron/updatedb</url-pattern>
  </servlet-mapping>
    
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>OBudget2.html</welcome-file>
  </welcome-file-list>

</web-app>
